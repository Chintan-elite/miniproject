</head>
<body>

    <div class="container">
        <duv class="row">
            <div class="col-md-6 m-auto">

                        <h1 align="center">User Details</h1>
                        <h2>Welcome, {{cuser.name}} | <a href="logout">Logout</a> | <a href="logoutall">Logoutall</a></h2>  
                        <table class="table">
                            <tr>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Image</th>
                            </tr>

                            {{#each userdata}}
                            <tr>
                                <td>{{this.name}}</td>
                                <td>{{this.email}}</td>
                                <td><img src="img/{{this.img}}" alt="{{this.img}}" width="30px" height="30px"></td>
                                <td><a href="do_delete?did={{this._id}}" class="btn btn-danger">Delete</a></td>
                                <td><a href="do_edit?eid={{this._id}}" class="btn btn-primary">Edit</a></td>
                            </tr>

                            {{/each}}

                        </table>



            </div>
        </duv>
    </div>
</body>
</html>